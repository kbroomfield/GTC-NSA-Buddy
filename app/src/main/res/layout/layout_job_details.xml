<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_place_black_24dp"
        android:id="@+id/job_details_nav_icon"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="551 Fake Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_details_street_addr"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/job_details_nav_icon"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:text="City, ZIP, State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_details_city_st_zip"
        app:layout_constraintLeft_toLeftOf="@+id/job_details_street_addr"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/job_details_street_addr" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_local_phone_black_24dp"
        android:id="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/job_details_nav_icon"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/job_details_city_st_zip"
        app:layout_constraintLeft_toLeftOf="@+id/job_details_nav_icon" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_details_phone"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_email_black_24dp"
        android:id="@+id/imageView3"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_details_email"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />
</android.support.constraint.ConstraintLayout>